name = Celadon
description = Fusion subtheme based on a WordPress theme from <a href="http://www.themesboutique.com/theme/celadon" target="_blank">Themes Boutique</a>. Drupal port provided by <a href="http://www.sandianstudio.com/" target="_blank">Sandian Studio</a>.
base theme = fusion_core
core = 6.x
engine = phptemplate

stylesheets[all][] = css/celadon-style.css

regions[sidebar_first] = sidebar first
regions[sidebar_last] = sidebar last
regions[header_top] = header top
regions[header] = header
regions[preface_top] = preface top
regions[preface_bottom] = preface bottom
regions[content_top] = content top
regions[content] = content
regions[content_bottom] = content bottom
regions[postscript_top] = postscript top
regions[postscript_bottom] = postscript bottom
regions[footer] = footer
regions[node_top] = node top
regions[node_bottom] = node bottom

features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = search
features[] = favicon
features[] = primary_links
features[] = secondary_links

; Default theme settings
settings[theme_grid] = grid16-960
settings[theme_grid_options][] = grid16-960
settings[theme_grid_options][] = grid16-fluid
settings[fluid_grid_width] = fluid-100
settings[theme_font_size] = font-size-12
settings[sidebar_layout] = sidebars-both-last
settings[sidebar_first_width] = 5
settings[sidebar_last_width] = 5

; Inherit Skinr styles from Fusion Core
skinr[options][inherit_skins] = true

; Sample Skinr style (uncomment to use, see Skinr section in CSS)
;skinr[fusion-example-styles][title] = Sample Skinr block styles
;skinr[fusion-example-styles][type] = checkboxes
;skinr[fusion-example-styles][features][] = block
;skinr[fusion-example-styles][options][1][label] = My sample Skinr style
;skinr[fusion-example-styles][options][1][class] = fusion-example-stylename

skinr[sidebar-block-color][title] = Sidebar block color
skinr[sidebar-block-color][type] = select
skinr[sidebar-block-color][description] = Select a color to use for the sidebar block.
skinr[sidebar-block-color][features][] = block
skinr[sidebar-block-color][options][1][label] = Blue
skinr[sidebar-block-color][options][1][class] = sidebar-block-blue
skinr[sidebar-block-color][options][2][label] = Green
skinr[sidebar-block-color][options][2][class] = sidebar-block-green
skinr[sidebar-block-color][options][3][label] = Red
skinr[sidebar-block-color][options][3][class] = sidebar-block-red
skinr[sidebar-block-color][options][4][label] = Orange
skinr[sidebar-block-color][options][4][class] = sidebar-block-orange
skinr[sidebar-block-color][options][5][label] = Purple
skinr[sidebar-block-color][options][5][class] = sidebar-block-purple
skinr[sidebar-block-color][options][6][label] = Black
skinr[sidebar-block-color][options][6][class] = sidebar-block-black

skinr[blogstyle-color][title] = Blog style color
skinr[blogstyle-color][type] = select
skinr[blogstyle-color][description] = Select a color to use for the blog style.
skinr[blogstyle-color][features][] = node
skinr[blogstyle-color][options][1][label] = Blue
skinr[blogstyle-color][options][1][class] = blogstyle-blue
skinr[blogstyle-color][options][2][label] = Green
skinr[blogstyle-color][options][2][class] = blogstyle-green
skinr[blogstyle-color][options][3][label] = Red
skinr[blogstyle-color][options][3][class] = blogstyle-red
skinr[blogstyle-color][options][4][label] = Orange
skinr[blogstyle-color][options][4][class] = blogstyle-orange
skinr[blogstyle-color][options][5][label] = Purple
skinr[blogstyle-color][options][5][class] = blogstyle-purple
skinr[blogstyle-color][options][6][label] = Black
skinr[blogstyle-color][options][6][class] = blogstyle-black
